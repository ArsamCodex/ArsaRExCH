@inherits LayoutComponentBase
<style>
    .top-row {
        display: flex;
        align-items: center; /* Centers items vertically */
        gap: 20px; /* Adds spacing between elements */
    }

    .component-wrapper {
        margin-left: auto; /* Pushes the component more to the right */
        padding-right: 20px; /* Optional: Adds space between the component and the right side */
        display: flex; /* Allows flex properties to work on the component */
        justify-content: center; /* Centers the component within the wrapper */
    }

    .tab-container {
        position: relative; /* Positions the sub-tabs relative to the main tab */
    }

    .main-tab {
        text-decoration: none;
        padding: 10px;
        background-color: #e7e7e7;
        border: 1px solid #ccc;
        border-radius: 4px;
        cursor: pointer;
    }

    .sub-tabs {
        display: none; /* Hide sub-tabs initially */
        position: absolute;
        top: 100%; /* Positions the sub-tabs below the main tab */
        left: 0;
        background-color: white;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        z-index: 10; /* Ensures sub-tabs are on top */
        min-width: 100px;
    }

        .sub-tabs a {
            display: block;
            padding: 8px;
            text-decoration: none;
            color: black;
            border-bottom: 1px solid #ddd;
        }

            .sub-tabs a:hover {
                background-color: #f0f0f0;
            }

    /* Show sub-tabs on hover */
    .tab-container:hover .sub-tabs {
        display: block;
    }
</style>
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="wallets">Wallet</a>
            <a href="AddMoneyBank">Deposit Money</a>
            <a href="Bet1">Bet</a>
            <a href="AdminPanel">Admin Panel</a>
            <a href="AirDrop">AirDrop</a>
            <a href="Forum">Forum</a>
            
            <!-- Tab 4 with hover effect to show more tabs -->
            <div class="tab-container">
                <a  class="main-tab">User Information</a>
                <div class="sub-tabs">
                    <a href="BetHistory">Bet History</a>
                    <a href="#tab6">Tab 6</a>
                    <a href="#tab7">Tab 7</a>
                    <a href="#tab8">Tab 8</a>
                </div>
            </div>

            <!-- Wrapper div to style the component positioning -->
            <div class="component-wrapper">
                <ArsaRExCH.Components.Pages.BtcPrice></ArsaRExCH.Components.Pages.BtcPrice>
            </div>
          
        </div>
  
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
