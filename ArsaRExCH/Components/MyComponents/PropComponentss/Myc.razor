    public static decimal CalculateLiquidationPrice(decimal entryPrice, decimal leverage)
    {
        // Liquidation price formula: EntryPrice * (1 - (1 / Leverage))
        decimal liquidationPrice = entryPrice * (1 - (1 / leverage));
        return liquidationPrice;
    }
    public static decimal CalculateShortLiquidationPriceShortMarket(decimal entryPrice, decimal leverage)
    {
        if (leverage <= 1)
        {
            throw new ArgumentException("Leverage must be greater than 1.");
        }

        // Liquidation price formula for a short position: Entry Price * (1 + (1 / Leverage))
        decimal liquidationPrice = entryPrice * (1 + (1 / leverage));
        return liquidationPrice;
    }

